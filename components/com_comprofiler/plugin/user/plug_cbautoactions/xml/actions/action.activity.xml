	<views>
		<view name="actiontype_activity" type="params" ui="admin">
			<extend toxpathnode="/cbxml/types" fromxpathnode="/*/types/type" file="/components/com_comprofiler/plugin/user/plug_cbactivity/xml/models/model.activity" mandatory="false" />
			<extend type="plugin" toxpathnode="/cbxml/views" fromxpathnode="/*/views/view" file="xml/views/view.com_comprofiler.cbactivityoverrides" mandatory="false" mode="extend" keyattribute="name" />
			<param name="" type="spacer" display="2lines" label="" default="Creates customized activity, comments, output streams, and much more." />
			<params name="activity" type="params" repeat="true" label="" display="2lines">
				<param name="mode" type="list" default="" blanktext="- Select Mode -" label="Mode" onchange="evaluate" description="Select the activity action mode.">
					<option value="activity">Activity</option>
					<option value="notification">Notification</option>
					<option value="comment">Comment</option>
					<option value="hidden">Hidden</option>
					<option value="follow">Follow</option>
					<option value="like">Like</option>
					<option value="tag">Tag</option>
					<option value="stream">Stream</option>
				</param>
				<if name="mode" nametype="param:string" operator="in" value="activity|*|notification|*|comment|*|hidden|*|follow|*|like|*|tag" valuetype="const:string" type="condition">
					<param name="method" type="list" default="create" translate-default="no" label="Method" description="Select if a new entry should be created or an existing entry deleted.">
						<option value="create">Create</option>
						<option value="delete">Delete</option>
					</param>
					<if name="mode" nametype="param:string" operator="in" value="activity|*|notification|*|comment" valuetype="const:string" type="condition">
						<if name="method" nametype="param:string" operator="=" value="create" valuetype="const:string" type="showhide">
							<param name="published" type="text" default="" label="Published" description="Optionally input the substitution supported published state for this entry. Note this will be converted to an integer with 1 being published and 0 being unpublished." size="15" />
						</if>
					</if>
					<if name="mode" nametype="param:string" operator="in" value="activity|*|notification" valuetype="const:string" type="condition">
						<param name="asset" type="text" size="50" label="Asset" description="Optionally input the substitution supported asset for this activity. Asset determines activity location (e.g. global, profile.USER_ID, profile.USER_ID.field.FIELD_ID). Leave blank to automatically set to profile.user_id." />
						<if name="method" nametype="param:string" operator="=" value="create" valuetype="const:string" type="showhide">
							<param name="title" type="text" label="Title" description="Optionally input the substitution supported activity title. Title is displayed to the right of the users name." size="50" />
							<param name="message" type="textarea" rows="5" label="Message" description="Optionally input the substitution supported activity message. Message is displayed below the activity header." cssclass="input-block" />
						</if>
					</if>
					<if name="mode" nametype="param:string" operator="=" value="comment" valuetype="const:string" type="condition">
						<param name="asset" type="text" size="50" label="Asset" validate="required" description="Input the substitution supported asset for this comment. Asset determines comment location (e.g. global, profile.USER_ID, profile.USER_ID.field.FIELD_ID)." />
						<if name="method" nametype="param:string" operator="=" value="create" valuetype="const:string" type="showhide">
							<param name="message" type="textarea" rows="5" label="Message" description="Optionally input the substitution supported comment message. Message is displayed next to the commenters name." cssclass="input-block" />
						</if>
					</if>
					<if name="mode" nametype="param:string" operator="=" value="hidden" valuetype="const:string" type="condition">
						<param name="type" type="xml:activity_hidden_type" default="activity" translate-default="no" label="Type" description="Select the hidden item type. This determines what exactly is hidden." />
						<param name="item" type="text" label="Item" size="30" validate="required" description="Input the substitution supported hidden item id. For activity supply the activity id. For comment supply the comment id. For asset supply the full asset to hide. For user supply the user id to hide." />
					</if>
					<if name="mode" nametype="param:string" operator="=" value="follow" valuetype="const:string" type="condition">
						<param name="asset" type="text" size="50" label="Asset" validate="required" description="Input the substitution supported asset to be followed. Asset determines what is being followed (e.g. global, profile.USER_ID, profile.USER_ID.field.FIELD_ID)." />
					</if>
					<if name="mode" nametype="param:string" operator="=" value="like" valuetype="const:string" type="condition">
						<param name="asset" type="text" size="50" label="Asset" validate="required" description="Input the substitution supported asset to be liked. Asset determines what is being liked (e.g. global, profile.USER_ID, profile.USER_ID.field.FIELD_ID)." />
						<param name="type" type="list" label="Type" hideblanktext="always" description="Select the type of this like.">
							<data name="" type="sql:multiplerows" table="#__comprofiler_plugin_activity_like_types" key="id">
								<rows>
									<field name="id" as="value" />
									<field name="value" as="text" />
								</rows>
								<orderby>
									<field name="ordering" ordering="ASC" />
								</orderby>
							</data>
						</param>
					</if>
					<if name="mode" nametype="param:string" operator="=" value="tag" valuetype="const:string" type="condition">
						<param name="asset" type="text" size="50" label="Asset" validate="required" description="Input the substitution supported asset for this tag. Asset determines tag location (e.g. global, profile.USER_ID, profile.USER_ID.field.FIELD_ID)." />
						<param name="tag" type="text" label="Tag" size="40" description="Input the substitution supported tag user as a single integer user_id or a name. Leave blank to use trigger user as the tag." />
					</if>
					<param name="owner" type="text" label="Owner" size="15" description="Input substitution supported owner as single integer user_id. Leave blank to use trigger user as the owner. Note this will result in user substitutions being from the specified user_id." />
					<if name="mode" nametype="param:string" operator="=" value="notification" valuetype="const:string" type="condition">
						<param name="user" type="text" label="User" size="15" description="Input substitution supported user as single integer user_id. This is the user who is receiving the notification. Leave blank to use trigger user as the user." />
					</if>
					<if name="mode" nametype="param:string" operator="in" value="activity|*|notification|*|comment|*|follow|*|like" valuetype="const:string" type="condition">
						<if name="method" nametype="param:string" operator="=" value="create" valuetype="const:string" type="showhide">
							<if name="mode" nametype="param:string" operator="in" value="activity|*|notification|*|comment" valuetype="const:string" type="condition">
								<if name="mode" nametype="param:string" operator="in" value="activity|*|comment" valuetype="const:string" type="condition">
									<fieldset name="entryaction" label="Action">
										<showview view="cbactivity_actionParams" mode="edit" type="view" />
									</fieldset>
									<fieldset name="entrylocation" label="Location">
										<showview view="cbactivity_locationParams" mode="edit" type="view" />
									</fieldset>
								</if>
								<fieldset name="entrylinks" label="Links">
									<showview view="cbactivity_linksParams" mode="edit" type="view" />
								</fieldset>
								<if name="mode" nametype="param:string" operator="=" value="activity" valuetype="const:string" type="condition">
									<fieldset name="activityoverrides" label="Overrides">
										<params name="defaults" type="params">
											<tabpane name="activitydefaults">
												<tabpanetab name="activitydefaultsgeneral" label="General">
													<param name="menu" type="xml:activity_stream_yesno" default="-1" label="Menu Display" description="Optionally override displaying this activity menu. Note normal menu item access permissions still apply." />
													<param name="edit" type="xml:activity_stream_yesno" default="-1" label="Edit Display" description="Optionally override displaying this activity edit menu. Note normal edit access permissions still apply." />
												</tabpanetab>
												<tabpanetab name="activitydefaultsactions" label="Actions">
													<param name="actions" type="xml:activity_stream_yesno" default="-1" label="Display" description="Optionally override displaying actions for this activity." />
												</tabpanetab>
												<tabpanetab name="activitydefaultslocations" label="Locations">
													<param name="locations" type="xml:activity_stream_yesno" default="-1" label="Display" description="Optionally override displaying locations for this activity." />
												</tabpanetab>
												<tabpanetab name="activitydefaultslinks" label="Links">
